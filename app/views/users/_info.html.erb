<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: asset_path('no_image') %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <% if current_user == user %>
      <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26158" %>
    <% else %>
      <%= link_to "", user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26158" %>
    <% end %>
  </div>
  <h2>New book</h2>
  <%= form_with model: book, local:true do |f| %>
    <div class="field row">
      <%= f.label :title %>
      <%= f.text_field :title, class:"col-xs-12" %>
    </div>
    <div class="field row">
      <%= f.label :opinion %>
      <%= f.text_area :body, class:"col-xs-12" %>
    </div>
    <div class="actions row">
      <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
    </div>
  <% end %>
</div>
<div class="container">
  <div class="error_explanation">
    <% if @book.errors.any? %>
      <% if @book.errors.count == 1 %>
        <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
      <% else %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <% end %>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">

      <%= render "users/info", user: @user, book: @book %>
      
      <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <th></th>
            <th>title</th>
            <th>opnion</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% if !@books.nil? %>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path(book.user) do %> 
                      <%= attachment_image_tag book.user, :profile_image, size: "50x50", fallback: image_tag(asset_path("no_image.jpg")) %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book.title, book_path(book) %>
                  </td>
                  <td>
                    <%= book.body %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
 